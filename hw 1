# while 循环 100内偶数求和
sum=0
i=2
while i < 101:
    sum = sum + i
    i = i+2
print(sum)

# for 循环 100内偶数求和
sum = 0
i = 2
while i < 101:
    sum = sum + i
    i = i+2
print(sum)

#while 循环+continue 100内偶数求和
n = 1
sum = 0
while n < 101:
    n = n+1
    if n % 2 == 1:  # 奇数
        continue  # 奇数跳过
    sum = sum+n
print(sum)


#倒序求和 100内偶数求和
sum = 0
i = 100
while i >= 0:
    sum = sum + i
    i = i-2
print(sum)
